{
  "cleanUrls": true,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {"key": "X-Frame-Options", "value": "SAMEORIGIN"},
        {"key": "X-Content-Type-Options", "value": "nosniff"},
        {"key": "Referrer-Policy", "value": "strict-origin-when-cross-origin"},
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self' data: https://fonts.googleapis.com https://fonts.gstatic.com https://wa.me"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "www.apnabot.in" }],
      "destination": "https://apnabot.in/$1",
      "permanent": true
    }
  ]
}
